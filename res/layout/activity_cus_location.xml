<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <include
        layout="@layout/layout_support_toolbar"
        android:id="@+id/cus_toolbar" />

    <TextView
        android:gravity="center"
        android:background="@android:color/holo_purple"
        android:id="@+id/tv_cus_name"
        android:textStyle="bold|italic"
        android:textSize="@dimen/middle_text_size"
        android:textColor="@android:color/black"
        android:padding="@dimen/dimens_20"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dimens_369"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dimens_20"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/tv_update_time" />

    <TextView
        android:gravity="center"
        android:background="@android:color/holo_red_light"
        android:id="@+id/tv_update_time"
        android:textStyle="bold|italic"
        android:textSize="@dimen/middle_text_size"
        android:textColor="@android:color/black"
        android:padding="@dimen/dimens_20"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dimens_369"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dimens_20"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/tv_req_time" />

    <TextView
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/tv_req_time"
        android:textStyle="bold|italic"
        android:textSize="@dimen/middle_text_size"
        android:textColor="@android:color/black"
        android:padding="@dimen/dimens_20"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dimens_369"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dimens_220"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
